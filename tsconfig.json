{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "declaration": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowJs": true,
        "target": "es6",
        "lib": ["es2017"],
        "types": ["reflect-metadata"],
        "outDir": "./dist",
        "baseUrl": "./src",
        "paths": {
            "controllers/*": [ "controllers/*" ],
            "interfaces/*": [ "interfaces/*" ],
            "middlewares/*": [ "middlewares/*" ],
            "models/*": [ "models/*" ],
            "services/*": [ "services/*" ]
        },
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts",
        "./test/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "./dist"
    ]
}